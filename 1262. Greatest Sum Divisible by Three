class Solution {
    public int maxSumDivThree(int[] nums) {
        int total = 0;

        // smallest numbers with remainder 1 and 2
        int min1 = Integer.MAX_VALUE, min2 = Integer.MAX_VALUE;
        int min11 = Integer.MAX_VALUE, min22 = Integer.MAX_VALUE;

        for (int num : nums) {
            total += num;

            if (num % 3 == 1) {
                if (num < min1) {
                    min11 = min1;
                    min1 = num;
                } else if (num < min11) {
                    min11 = num;
                }
            } else if (num % 3 == 2) {
                if (num < min2) {
                    min22 = min2;
                    min2 = num;
                } else if (num < min22) {
                    min22 = num;
                }
            }
        }

        if (total % 3 == 0) return total;

        if (total % 3 == 1) {
            int remove1 = min1;
            int remove2 = (min2 == Integer.MAX_VALUE || min22 == Integer.MAX_VALUE)
                          ? Integer.MAX_VALUE
                          : min2 + min22;
            return total - Math.min(remove1, remove2);
        } else {  
            int remove1 = min2;
            int remove2 = (min1 == Integer.MAX_VALUE || min11 == Integer.MAX_VALUE)
                          ? Integer.MAX_VALUE
                          : min1 + min11;
            return total - Math.min(remove1, remove2);
        }
    }
}
