import java.util.*;

class Solution {
    public int intersectionSizeTwo(int[][] intervals) {
        Arrays.sort(intervals, (a, b) -> a[1] == b[1] ? b[0] - a[0] : a[1] - b[1]);
        int a = -1, b = -1, ans = 0;
        for (int[] in : intervals) {
            int start = in[0], end = in[1];
            if (start > b) {
                ans += 2;
                b = end;
                a = end - 1;
            } else if (start > a) {
                ans += 1;
                a = b;
                b = end;
            }
        }
        return ans;
    }
}
