class Solution {
    public int countValidSelections(int[] nums) {
        int n = nums.length, res = 0;
        for (int i = 0; i < n; i++) {
            if (nums[i] == 0) {
                if (canZero(nums.clone(), i, 1)) res++;
                if (canZero(nums.clone(), i, -1)) res++;
            }
        }
        return res;
    }

    private boolean canZero(int[] nums, int curr, int dir) {
        int n = nums.length;
        while (curr >= 0 && curr < n) {
            if (nums[curr] == 0) curr += dir;
            else {
                nums[curr]--;
                dir *= -1;
                curr += dir;
            }
        }
        for (int x : nums) if (x != 0) return false;
        return true;
    }
}
